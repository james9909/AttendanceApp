<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="wang.james.attendance" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.TakeAttendanceActivity"
            android:label="@string/title_activity_take_attendance"
            android:parentActivityName=".Activity.MainActivity" >
        </activity>
        <activity
            android:name=".Activity.ViewAttendanceActivity"
            android:label="@string/title_activity_view_attendance"
            android:parentActivityName=".Activity.MainActivity" >
        </activity>
    </application>

</manifest>
