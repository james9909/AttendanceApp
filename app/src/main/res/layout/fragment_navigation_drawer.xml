<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEE"
    tools:context="wang.james.navigationdrawer.NavigationDrawer"
    android:layout_marginTop="@dimen/drawer_margin_top">

    <TextView
        android:id="@+id/not_logged_in"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/not_logged_in_message"
        android:paddingTop="@dimen/drawer_margin_top"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/drawer_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/drawer_margin_top" />

</RelativeLayout>